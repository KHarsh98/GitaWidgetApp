<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/gita_widget_quote"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:background="#CCA78D84"

        android:gravity="center"
        android:textColor="#FF000000"
        android:layout_alignBottom="@+id/gita_widget_open_app_button"
        android:text="An intelligent person does not take part in the sources of misery, which are due to contact with material senses. Such pleasures have a beginning and an end, and so the wise man does not delight in them."/>


    <ImageButton
        android:id="@+id/gita_widget_open_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_arrow_upward_24"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
         />
    <ImageButton
        android:id="@+id/gita_widget_chapter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/gita_widget_open_app_button"
        android:src="@drawable/ic_baseline_menu_book_24"
        android:background="@null"
        />
    <ImageButton
        android:id="@+id/git_widget_random_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/gita_widget_open_app_button"
        android:src="@drawable/ic_baseline_help_24"
        android:background="@null"
         />




</RelativeLayout>